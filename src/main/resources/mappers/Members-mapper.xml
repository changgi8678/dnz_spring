<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="members">

    <!-- 사용자 ID로 사용자 조회 -->
    <select id="selectById" resultType="com.kedu.dto.MembersDTO">
        SELECT *
        FROM members
        WHERE USER_ID = #{user_Id}
    </select>

    <select id="findByUserId" resultType="com.kedu.dto.MembersDTO">
        SELECT *
        FROM members
        WHERE USER_ID = #{user_Id}
    </select>

    <!-- 이메일로 사용자 조회 -->
    <select id="findByEmail" resultType="com.kedu.dto.MembersDTO">
        SELECT *
        FROM members
        WHERE USER_EMAIL = #{user_Email}
    </select>

    <!-- 전화번호로 사용자 조회 -->
    <select id="findByPhoneNumber" resultType="com.kedu.dto.MembersDTO">
        SELECT *
        FROM members
        WHERE USER_PHONE_NUMBER = #{user_Phone_Number}
    </select>

    <!-- 사용자 등록 -->
    <insert id="registerUser" parameterType="com.kedu.dto.MembersDTO">
        INSERT INTO members (USER_SEQ, user_id, user_pw, USER_NAME, user_email, USER_PHONE_NUMBER, USER_BIRTH_DATE, WRITE_DATE)
        VALUES (user_seq.NEXTVAL, #{userId}, #{userPw}, #{userName}, #{userEmail}, #{userPhoneNumber}, #{userBirthDate}, sysdate)
    </insert>




</mapper>
